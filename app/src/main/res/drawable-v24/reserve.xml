<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="@color/dark_grey" />
            <gradient android:angle="-90" android:startColor="@color/loginBgSlaveEnd" android:endColor="@color/loginBgSlaveEnd"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="@color/dark_grey" />
            <solid android:color="@color/loginBgSlaveEnd"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="@color/dark_grey" />
            <gradient android:angle="-90" android:startColor="@color/loginBgSlaveEnd" android:endColor="@color/loginBgSlaveEnd" />
        </shape>
    </item>
</selector>